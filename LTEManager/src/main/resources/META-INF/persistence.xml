<persistence xmlns="http://java.sun.com/xml/ns/persistence"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
   version="1.0">
 
   <persistence-unit name="fullStack">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <jta-data-source>java:jboss/datasources/mysql</jta-data-source>
      <class>com.entities.CellHier</class>
      <class>com.entities.Duration</class>
      <class>com.entities.EventCause</class>
      <class>com.entities.EventId</class>
      <class>com.entities.Failure</class>
      <class>com.entities.Fault</class>
      <class>com.entities.IMSI</class>
      <class>com.entities.InputMode</class>
      <class>com.entities.MCC</class>
      <class>com.entities.MNC</class>
      <class>com.entities.NEVersion</class>
      <class>com.entities.OSType</class>
      <class>com.entities.UE</class>
      <class>com.entities.UEType</class>     
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
         <property name="hibernate.hbm2ddl.auto" value="update" />
      </properties>
   </persistence-unit>
</persistence>